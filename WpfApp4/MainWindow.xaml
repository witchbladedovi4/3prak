<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="Список дел" Height="450" Width="800">
    <Grid Background="#FFFDFAF1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock Text="Список дел" HorizontalAlignment="Center"
                       FontSize="26"/>
        </StackPanel>
        <ListBox Grid.Column="0" Grid.Row="1"
                Background="#FDF5DF"
                x:Name="listToDo"
                Margin="0 0 10 0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock x:Name="titleToDo1"/>
                        <TextBlock x:Name="dateToDo" Text="{Binding Path=Date, StringFormat=dd.MM.yyyy}"/>
                        <TextBlock x:Name="descriptionToDo"  Text="{Binding Path=Description}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            </ListBox>
        <CheckBox Grid.Column="1" Content="Добавление новых дел" VerticalAlignment="Center"/>
        <GroupBox Grid.Column="1" Grid.Row="1"
                  x:Name="groupBoxToDo"
                  Background="#FDF5DF">
            <StackPanel Margin="10 0 10 0">
                <StackPanel>
                    <TextBlock Text="Название:"/>
                    <TextBox x:Name="titleToDo2" Margin="0 5 0 0"/>
                </StackPanel>
                <StackPanel Margin="0 10 0 0">
                    <TextBlock Text="Выполнить до:"/>
                    <DatePicker Margin="0 5 0 0"/>
                </StackPanel>
                <StackPanel Margin="0 10 0 0">
                    <TextBlock Text="Описание:"/>
                    <TextBox Height="200" />
                </StackPanel>
            </StackPanel>
            
        </GroupBox>
        <StackPanel Grid.Column="1" Grid.Row="2">
            <Button Content="Дело" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
